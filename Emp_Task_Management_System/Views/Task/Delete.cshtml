@model Emp_Task_Management_System.Models.Task

@{
    ViewBag.Title = "Delete Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var priorityClass = "badge-priority-" + (Model.Priority != null ? Model.Priority.ToLower() : "low");
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        background: #f5f7fa;
        color: #2d3748;
    }

    .delete-wrapper {
        width: 100%;
        min-height: 100vh;
        padding: 0;
        margin: 0;
    }

    /* Header Section */
    .page-header {
        background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
        color: white;
        padding: 40px 0;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) scale(1);
        }

        50% {
            transform: translateY(-20px) scale(1.05);
        }
    }

    .header-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 30px;
        position: relative;
        z-index: 1;
        text-align: center;
    }

    .header-content h1 {
        font-size: 32px;
        font-weight: 700;
        margin: 0 0 10px 0;
        animation: slideInDown 0.6s ease;
    }

    .header-content p {
        font-size: 16px;
        opacity: 0.9;
        margin: 0;
        animation: slideInDown 0.8s ease;
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Main Content */
    .main-content {
        max-width: 800px;
        margin: -30px auto 0;
        padding: 0 30px 50px;
        position: relative;
        z-index: 2;
    }

    /* Warning Card */
    .warning-card {
        background: #fff5f5;
        border: 2px solid #feb2b2;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 25px;
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(229, 62, 62, 0.4);
        }

        50% {
            box-shadow: 0 0 0 10px rgba(229, 62, 62, 0);
        }
    }

    .warning-content {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .warning-icon {
        width: 50px;
        height: 50px;
        background: #e53e3e;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        flex-shrink: 0;
    }

    .warning-text h3 {
        font-size: 20px;
        font-weight: 700;
        color: #c53030;
        margin: 0 0 5px 0;
    }

    .warning-text p {
        font-size: 14px;
        color: #742a2a;
        margin: 0;
    }

    /* Delete Card */
    .delete-card {
        background: white;
        border-radius: 15px;
        padding: 35px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        animation: fadeInUp 0.6s ease;
        border-left: 5px solid #e53e3e;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .task-id-badge {
        display: inline-block;
        background: #e53e3e;
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .delete-card h2 {
        font-size: 24px;
        font-weight: 700;
        color: #2d3748;
        margin: 0 0 20px 0;
        padding-bottom: 15px;
        border-bottom: 2px solid #e2e8f0;
    }

    .detail-row {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 15px;
        padding: 15px;
        background: #f7fafc;
        border-radius: 8px;
        margin-bottom: 10px;
        border-left: 3px solid #e2e8f0;
    }

    .detail-label {
        font-weight: 600;
        color: #4a5568;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .detail-label i {
            color: #e53e3e;
        }

    .detail-value {
        color: #2d3748;
        font-weight: 500;
    }

    .badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
    }

    .badge-priority-high {
        background: #fff5f5;
        color: #e53e3e;
    }

    .badge-priority-medium {
        background: #fffaf0;
        color: #ed8936;
    }

    .badge-priority-low {
        background: #f0fff4;
        color: #48bb78;
    }

    .badge-status-true {
        background: #e6fffa;
        color: #38a169;
    }

    .badge-status-false {
        background: #fffaf0;
        color: #d69e2e;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 2px solid #e2e8f0;
    }

    .btn-action {
        flex: 1;
        padding: 14px 30px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: none;
        text-decoration: none;
    }

    .btn-delete {
        background: #e53e3e;
        color: white;
        box-shadow: 0 4px 15px rgba(229, 62, 62, 0.4);
    }

        .btn-delete:hover {
            background: #c53030;
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(229, 62, 62, 0.5);
        }

    .btn-cancel {
        background: #f7fafc;
        color: #4a5568;
        border: 2px solid #e2e8f0;
    }

        .btn-cancel:hover {
            background: #edf2f7;
            border-color: #cbd5e0;
            transform: translateY(-2px);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header {
            padding: 30px 0;
        }

        .header-content h1 {
            font-size: 24px;
        }

        .delete-card {
            padding: 25px 20px;
        }

        .detail-row {
            grid-template-columns: 1fr;
            gap: 5px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .main-content {
            padding: 0 20px 30px;
        }
    }
</style>

<div class="delete-wrapper">
    <!-- Header Section -->
    <div class="page-header">
        <div class="header-content" style="cursor:pointer;"
            onclick="location.href='@Url.Action("Index","Home")'">
            <h1><i class="fas fa-exclamation-triangle"></i> Delete Task</h1>
            <p>This action cannot be undone</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Warning Card -->
        <div class="warning-card">
            <div class="warning-content">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="warning-text">
                    <h3>Warning!</h3>
                    <p>Are you sure you want to delete this task? This action cannot be undone and all associated data will be permanently removed.</p>
                </div>
            </div>
        </div>

        <!-- Delete Card -->
        <div class="delete-card">
            <div class="task-id-badge">
                <i class="fas fa-hashtag"></i> Task ID: @Model.TaskId
            </div>
            <h2><i class="fas fa-file-alt"></i> Task Information</h2>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-heading"></i> Title
                </div>
                <div class="detail-value">@Model.Title</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-align-left"></i> Description
                    </div>
                    <div class="detail-value">@Model.Description</div>
                </div>
            }

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-flag"></i> Priority
                </div>
                <div class="detail-value">
                    <span class="badge @priorityClass">
                        <i class="fas fa-flag"></i> @Model.Priority
                    </span>
                </div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-toggle-on"></i> Status
                </div>
                <div class="detail-value">
                    <span class="badge badge-status-@Model.Status.ToString().ToLower()">
                        <i class="fas @(Model.Status ? "fa-check-circle" : "fa-clock")"></i>
                        @(Model.Status ? "Completed" : "In Progress")
                    </span>
                </div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-calendar-alt"></i> Due Date
                </div>
                <div class="detail-value">@Model.DueDate.ToString("MMMM dd, yyyy")</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-clock"></i> Created Date
                </div>
                <div class="detail-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
            </div>

            @if (Model.Registration != null)
            {
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-user"></i> Assigned To
                    </div>
                    <div class="detail-value">
                        <strong>@Model.Registration.Username</strong>
                        @if (!string.IsNullOrEmpty(Model.Registration.Designation))
                        {
                            <span> - @Model.Registration.Designation</span>
                        }
                    </div>
                </div>
            }

            @using (Html.BeginForm("Delete", "Task", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="action-buttons">
                    <button type="submit" class="btn-action btn-delete">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                    <a href="@Url.Action("Index", "Task")" class="btn-action btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>
