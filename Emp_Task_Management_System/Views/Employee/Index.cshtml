@model IEnumerable<Emp_Task_Management_System.Models.Registration>

@{
    ViewBag.Title = "Employee Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        background: #f5f7fa;
        color: #2d3748;
    }

    .employees-wrapper {
        width: 100%;
        min-height: 100vh;
        padding: 0;
        margin: 0;
    }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 0;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) scale(1);
        }

        50% {
            transform: translateY(-20px) scale(1.05);
        }
    }

    .header-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 30px;
        position: relative;
        z-index: 1;
    }

    .header-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 20px;
    }

    .header-title-section h1 {
        font-size: 36px;
        font-weight: 700;
        margin: 0 0 8px 0;
    }

    .header-title-section p {
        font-size: 16px;
        opacity: 0.9;
        margin: 0;
    }

    .btn-header {
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        background: white;
        color: #667eea;
        border: none;
    }

        .btn-header:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(255,255,255,0.3);
        }

    .stats-bar {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .stat-item {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 15px 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        border: 1px solid rgba(255,255,255,0.2);
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        background: rgba(255,255,255,0.25);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
    }

    .stat-info h3 {
        font-size: 24px;
        font-weight: 700;
        margin: 0 0 5px 0;
    }

    .stat-info p {
        font-size: 13px;
        margin: 0;
        opacity: 0.9;
    }

    .main-content {
        max-width: 1400px;
        margin: -40px auto 0;
        padding: 0 30px 50px;
        position: relative;
        z-index: 2;
    }

    .employees-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
    }

    .employee-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .employee-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .employee-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }

    .employee-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e2e8f0;
    }

    .employee-avatar {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 28px;
        font-weight: 700;
        flex-shrink: 0;
        border: 3px solid #f7fafc;
    }

    .employee-info h3 {
        font-size: 20px;
        font-weight: 700;
        color: #2d3748;
        margin: 0 0 5px 0;
    }

    .employee-info p {
        font-size: 14px;
        color: #718096;
        margin: 0;
    }

    .employee-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        color: #4a5568;
    }

        .detail-item i {
            color: #667eea;
            width: 20px;
        }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-active {
        background: #e6fffa;
        color: #38a169;
    }

    .status-inactive {
        background: #fff5f5;
        color: #e53e3e;
    }

    .employee-actions {
        display: flex;
        gap: 8px;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 2px solid #e2e8f0;
    }

    .btn-action {
        flex: 1;
        padding: 10px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        border: 2px solid;
    }

    .btn-edit {
        background: #ebf8ff;
        color: #3182ce;
        border-color: #3182ce;
    }

        .btn-edit:hover {
            background: #3182ce;
            color: white;
        }

    .btn-details {
        background: #f7fafc;
        color: #4a5568;
        border-color: #cbd5e0;
    }

        .btn-details:hover {
            background: #4a5568;
            color: white;
        }

    .btn-delete {
        background: #fff5f5;
        color: #e53e3e;
        border-color: #e53e3e;
    }

        .btn-delete:hover {
            background: #e53e3e;
            color: white;
        }

    .empty-state {
        background: white;
        border-radius: 15px;
        padding: 60px 30px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .empty-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 40px;
        color: white;
    }

    @@media (max-width: 768px) {
        .employees-grid {
            grid-template-columns: 1fr;
        }

        .main-content {
            padding: 0 20px 30px;
        }
    }
</style>

<div class="employees-wrapper">
    <div class="page-header">
        <div class="header-content">
            <div class="header-top" style="cursor:pointer;"
            onclick="location.href='@Url.Action("Index","Home")'">
                <div class="header-title-section">
                    <h1><i class="fas fa-users"></i> Employee Management</h1>
                    <p>Manage your team members and their information</p>
                </div>
            </div>
            <div class="stats-bar">
                <div class="stat-item">
                    <div class="stat-icon"><i class="fas fa-users"></i></div>
                    <div class="stat-info">
                        <h3>@Model.Count()</h3>
                        <p>Total Employees</p>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon"><i class="fas fa-user-check"></i></div>
                    <div class="stat-info">
                        <h3>@Model.Count(e => e.IsActive)</h3>
                        <p>Active</p>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon"><i class="fas fa-user-times"></i></div>
                    <div class="stat-info">
                        <h3>@Model.Count(e => !e.IsActive)</h3>
                        <p>Inactive</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content">
        @if (Model != null && Model.Any())
        {
            <div class="employees-grid">
                @foreach (var item in Model)
                {
                    var initials = !string.IsNullOrEmpty(item.Username)
                        ? string.Join("", item.Username.Split(' ').Take(2).Select(n => n[0])).ToUpper()
                        : "NA";

                    <div class="employee-card">
                        <div class="employee-header">
                            <div class="employee-avatar">@initials</div>
                            <div class="employee-info">
                                <h3>@item.Username</h3>
                                <p>@(item.Designation ?? "Team Member")</p>
                            </div>
                        </div>
                        <div class="employee-details">
                            <div class="detail-item">
                                <i class="fas fa-envelope"></i>
                                <span>@item.Email</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-calendar"></i>
                                <span>Joined: @item.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-info-circle"></i>
                                <span class="status-badge @(item.IsActive ? "status-active" : "status-inactive")">
                                    <i class="fas @(item.IsActive ? "fa-check-circle" : "fa-times-circle")"></i>
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                        <div class="employee-actions">
                            <a href="@Url.Action("Edit", "Employee", new { id = item.Id })" class="btn-action btn-edit">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="@Url.Action("Details", "Employee", new { id = item.Id })" class="btn-action btn-details">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="@Url.Action("Delete", "Employee", new { id = item.Id })" class="btn-action btn-delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon"><i class="fas fa-users"></i></div>
                <h3>No Employees Yet</h3>
                <p>Start by adding your first employee!</p>
                <a href="@Url.Action("Create", "Employee")" class="btn-header"><i class="fas fa-plus"></i> Add Employee</a>
            </div>
        }
    </div>
</div>