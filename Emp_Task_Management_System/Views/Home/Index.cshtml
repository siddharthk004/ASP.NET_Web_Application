@model IEnumerable<Emp_Task_Management_System.Models.Registration>
@using Emp_Task_Management_System.Models

@{
    ViewBag.Title = "Dashboard - Employee Task Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.css" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: #f5f7fa;
        color: #2d3748;
        overflow-x: hidden;
    }

    .dashboard-container {
        width: 100%;
        min-height: 100vh;
    }

    /* Header Section */
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 0;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) scale(1);
        }

        50% {
            transform: translateY(-20px) scale(1.05);
        }
    }

    .header-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 30px; /* <-- Should be 0 30px for proper spacing */
        position: relative;
        z-index: 1;
    }

    .welcome-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .welcome-text h1 {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 8px;
        animation: slideInLeft 0.6s ease;
    }

    .welcome-text p {
        font-size: 16px;
        opacity: 0.9;
        animation: slideInLeft 0.8s ease;
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .header-actions {
        display: flex;
        gap: 15px;
        animation: slideInRight 0.6s ease;
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .btn-header {
        padding: 12px 25px;
        border-radius: 10px;
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .btn-primary {
        background: white;
        color: #667eea;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(255,255,255,0.3);
        }

    .btn-secondary {
        background: rgba(255,255,255,0.2);
        color: white;
        border: 2px solid rgba(255,255,255,0.3);
    }

        .btn-secondary:hover {
            background: rgba(255,255,255,0.3);
        }

    /* Main Content */
    .main-content {
        max-width: 1400px;
        margin: -40px auto 0;
        padding: 0 30px 50px;
        position: relative;
        z-index: 2;
    }

    /* Stats Cards */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2);
    }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: white;
    }

        .stat-icon.purple {
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .stat-icon.green {
            background: linear-gradient(135deg, #48bb78, #38a169);
        }

        .stat-icon.orange {
            background: linear-gradient(135deg, #ed8936, #dd6b20);
        }

        .stat-icon.blue {
            background: linear-gradient(135deg, #4299e1, #3182ce);
        }

    .stat-trend {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 12px;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 600;
    }

    .trend-up {
        background: #e6fffa;
        color: #38a169;
    }

    .trend-down {
        background: #fff5f5;
        color: #e53e3e;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 14px;
        color: #718096;
        font-weight: 500;
    }

    /* Section Styles */
    .section {
        margin-bottom: 40px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 24px;
        font-weight: 700;
        color: #2d3748;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .section-title i {
            color: #667eea;
        }

    .view-all {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .view-all:hover {
            color: #764ba2;
        }

    /* Charts Grid */
    .charts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
    }

    .chart-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        animation: fadeInUp 0.8s ease;
    }

    .chart-header {
        margin-bottom: 20px;
    }

    .chart-title {
        font-size: 18px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 5px;
    }

    .chart-subtitle {
        font-size: 14px;
        color: #718096;
    }

    .chart-container {
        position: relative;
        height: 300px;
    }

    /* Tasks Section */
    .tasks-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 25px;
        margin-bottom: 40px;
    }

    .task-list-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .task-item {
        padding: 20px;
        border-radius: 10px;
        background: #f7fafc;
        margin-bottom: 15px;
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }

        .task-item:hover {
            background: #edf2f7;
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .task-item.high {
            border-left-color: #e53e3e;
        }

        .task-item.medium {
            border-left-color: #ed8936;
        }

        .task-item.low {
            border-left-color: #48bb78;
        }

    .task-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 10px;
    }

    .task-title {
        font-weight: 600;
        color: #2d3748;
        font-size: 16px;
        margin-bottom: 5px;
    }

    .task-description {
        font-size: 14px;
        color: #718096;
        margin-bottom: 15px;
    }

    .task-meta {
        display: flex;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
    }

    .task-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-priority {
        background: #fff5f5;
        color: #e53e3e;
    }

    .badge-status {
        background: #e6fffa;
        color: #38a169;
    }

    .task-date {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 12px;
        color: #718096;
    }

    .task-assignee {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 12px;
        color: #718096;
    }

    .assignee-avatar {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 10px;
    }

    /* Activity Timeline */
    .activity-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .activity-item {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
        position: relative;
    }

        .activity-item::before {
            content: '';
            position: absolute;
            left: 19px;
            top: 40px;
            width: 2px;
            height: calc(100% - 20px);
            background: #e2e8f0;
        }

        .activity-item:last-child::before {
            display: none;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        color: white;
        flex-shrink: 0;
        z-index: 1;
    }

        .activity-icon.success {
            background: linear-gradient(135deg, #48bb78, #38a169);
        }

        .activity-icon.info {
            background: linear-gradient(135deg, #4299e1, #3182ce);
        }

        .activity-icon.warning {
            background: linear-gradient(135deg, #ed8936, #dd6b20);
        }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 5px;
        font-size: 14px;
    }

    .activity-description {
        font-size: 13px;
        color: #718096;
        margin-bottom: 5px;
    }

    .activity-time {
        font-size: 12px;
        color: #a0aec0;
    }

    /* Team Section */
    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .team-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        text-align: center;
        transition: all 0.3s ease;
    }

        .team-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

    .team-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 32px;
        font-weight: 700;
        margin: 0 auto 15px;
        border: 4px solid #f7fafc;
    }

    .team-name {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 5px;
        font-size: 16px;
    }

    .team-role {
        font-size: 14px;
        color: #718096;
        margin-bottom: 15px;
    }

    .team-stats {
        display: flex;
        justify-content: space-around;
        padding-top: 15px;
        border-top: 1px solid #e2e8f0;
    }

    .team-stat {
        text-align: center;
    }

    .team-stat-value {
        font-weight: 700;
        color: #667eea;
        font-size: 18px;
    }

    .team-stat-label {
        font-size: 12px;
        color: #718096;
    }

    /* Quick Actions */
    .quick-actions {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        margin-bottom: 40px;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .action-button {
        padding: 25px;
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        text-decoration: none;
        color: #2d3748;
    }

        .action-button:hover {
            border-color: #667eea;
            background: #f7fafc;
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.2);
        }

    .action-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        margin: 0 auto 15px;
    }

    .action-title {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .action-description {
        font-size: 13px;
        color: #718096;
    }

    /* Progress Section */
    .progress-section {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        margin-bottom: 40px;
    }

    .progress-item {
        margin-bottom: 25px;
    }

    .progress-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .progress-label {
        font-weight: 600;
        color: #2d3748;
        font-size: 14px;
    }

    .progress-percentage {
        font-weight: 700;
        color: #667eea;
        font-size: 14px;
    }

    .progress-bar {
        width: 100%;
        height: 12px;
        background: #e2e8f0;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 10px;
        transition: width 1s ease;
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .tasks-container {
            grid-template-columns: 1fr;
        }

        .charts-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .dashboard-header {
            padding: 30px 0;
        }

        .welcome-text h1 {
            font-size: 28px;
        }

        .header-actions {
            width: 100%;
            justify-content: center;
        }

        .main-content {
            padding: 0 20px 30px;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .team-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Loading Animation */
    .loading {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255,255,255,.3);
        border-radius: 50%;
        border-top-color: #fff;
        animation: spin 1s ease-in-out infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Footer */
    .dashboard-footer {
        background: white;
        padding: 30px;
        text-align: center;
        color: #718096;
        border-top: 1px solid #e2e8f0;
    }
</style>

<div class="dashboard-container">
   
    @Html.Partial("_Dashboard")
    <!-- Main Content -->
    <div class="main-content">
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card" style="animation-delay: 0.1s;">
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, #667eea, #764ba2);"></div>
                <div class="stat-header">
                    <div class="stat-icon purple">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="stat-trend trend-up">
                        <i class="fas fa-arrow-up"></i>
                        12%
                    </div>
                </div>
                <div class="stat-value">@ViewBag.TotalTask</div>
                <div class="stat-label">Total Tasks</div>
            </div>

            <div class="stat-card" style="animation-delay: 0.2s;">
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, #48bb78, #38a169);"></div>
                <div class="stat-header">
                    <div class="stat-icon green">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-trend trend-up">
                        <i class="fas fa-arrow-up"></i>
                        8%
                    </div>
                </div>
                <div class="stat-value">@ViewBag.TotalEmployee</div>
                <div class="stat-label">Total Employee</div>
            </div>

            <div class="stat-card" style="animation-delay: 0.3s;">
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, #ed8936, #dd6b20);"></div>
                <div class="stat-header">
                    <div class="stat-icon orange">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-trend trend-down">
                        <i class="fas fa-arrow-down"></i>
                        3%
                    </div>
                </div>
                <div class="stat-value">@ViewBag.ActiveEmp</div>
                <div class="stat-label">Active Employee</div>
            </div>

            <div class="stat-card" style="animation-delay: 0.4s;">
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, #4299e1, #3182ce);"></div>
                <div class="stat-header">
                    <div class="stat-icon blue">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-trend trend-up">
                        <i class="fas fa-arrow-up"></i>
                        5%
                    </div>
                </div>
                <div class="stat-value">@ViewBag.InProgressTask</div>
                <div class="stat-label">In-Progress Task</div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-chart-line"></i>
                    Analytics Overview
                </h2>
            </div>
            <div class="charts-grid">
                <div class="chart-card">
                    <div class="chart-header">
                        <h3 class="chart-title">Task Status Distribution</h3>
                        <p class="chart-subtitle">Overview of all task statuses</p>
                    </div>
                    <div class="chart-container">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>

                <div class="chart-card">
                    <div class="chart-header">
                        <h3 class="chart-title">Weekly Task Completion</h3>
                        <p class="chart-subtitle">Tasks completed this week</p>
                    </div>
                    <div class="chart-container">
                        <canvas id="weeklyChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-bolt"></i>
                    Quick Actions
                </h2>
            </div>
            <div class="quick-actions">
                <div class="actions-grid">
                    <a href="@Url.Action("Create", "Task")" class="action-button">
                        <div class="action-icon">
                            <i class="fas fa-plus"></i>
                        </div>
                        <div class="action-title">Create Task</div>
                        <div class="action-description">Add a new task to the system</div>
                    </a>

                    <a href="@Url.Action("Index", "Employee")" class="action-button">
                        <div class="action-icon" style="background: linear-gradient(135deg, #48bb78, #38a169);">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="action-title">Manage Team</div>
                        <div class="action-description">View and manage team members</div>
                    </a>

                    <a href="@Url.Action("Index", "Task")" class="action-button">
                        <div class="action-icon" style="background: linear-gradient(135deg, #ed8936, #dd6b20);">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <div class="action-title">View Tasks</div>
                        <div class="action-description">Generate and view Task</div>
                    </a>

                    @*<a href="@Url.Action("Settings", "Account")" class="action-button">
                        <div class="action-icon" style="background: linear-gradient(135deg, #4299e1, #3182ce);">
                            <i class="fas fa-cog"></i>
                        </div>
                        <div class="action-title">Settings</div>
                        <div class="action-description">Configure system settings</div>
                    </a>*@
                </div>
            </div>
        </div>

        <!-- Team Members -->
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-user-friends"></i>
                    Team Members
                </h2>
                <a href="@Url.Action("Index", "Employee")" class="view-all">View All <i class="fas fa-arrow-right"></i></a>
            </div>
            <div class="team-grid">
                @foreach (var e in Model.Take(4))
                {
                    <div class="team-card">

                        <div class="team-avatar">@e.Id</div>
                        <div class="team-name">@e.Username</div>
                        <div class="team-role">@e.Designation</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="dashboard-footer">
        <p>&copy; 2026 Employee Task Management System. All rights reserved.</p>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        // Task Status Chart
        const statusCtx = document.getElementById('statusChart').getContext('2d');
        const statusChart = new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Completed', 'In Progress', 'Pending', 'Review'],
                datasets: [{
                    data: [89, 42, 15, 10],
                    backgroundColor: [
                        '#48bb78',
                        '#667eea',
                        '#ed8936',
                        '#4299e1'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            font: {
                                family: 'Poppins',
                                size: 12
                            }
                        }
                    }
                }
            }
        });

        // Weekly Task Chart
        const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
        const gradient = weeklyCtx.createLinearGradient(0, 0, 0, 300);
        gradient.addColorStop(0, 'rgba(102, 126, 234, 0.8)');
        gradient.addColorStop(1, 'rgba(118, 75, 162, 0.8)');

        const weeklyChart = new Chart(weeklyCtx, {
            type: 'bar',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Tasks Completed',
                    data: [12, 19, 15, 17, 14, 10, 8],
                    backgroundColor: gradient,
                    borderRadius: 8,
                    barThickness: 30
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#f0f0f0'
                        },
                        ticks: {
                            font: {
                                family: 'Poppins'
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            font: {
                                family: 'Poppins'
                            }
                        }
                    }
                }
            }
        });

        // Animate progress bars on load
        window.addEventListener('load', function () {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        });
    </script>
}
