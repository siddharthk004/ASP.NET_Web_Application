@model EmployeeCRUD.Models.Employee

@{
    ViewBag.Title = "Create Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    .popup-container {
        border-radius: 12px;
        padding: 25px;
        max-width: 800px;
    }

    .popup-header h2 {
        margin: 0 0 20px;
        color: #2c3e50;
    }

    .form-section {
        margin-top: 15px;
    }

    .d-flex {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
    }

    .left-side, .right-side {
        width: 50%;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
    }

    .checkbox-wrapper {
        margin-top: 32px;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 25px;
    }

    .btn-save {
        background: #198754;
        color: #fff;
        border-radius: 25px;
        padding: 10px 22px;
        border: none;
    }

    .btn-cancel {
        background: #dc3545;
        color: #fff;
        border-radius: 25px;
        padding: 10px 22px;
        border: none;
    }

        .btn-save:hover,
        .btn-cancel:hover {
            opacity: 0.9;
        }

    .validation-summary {
        color: red;
        margin-bottom: 10px;
    }
</style>

<div class="popup-container">
    <div class="popup-header">
        <h2>
            <i class="fas fa-user-edit"></i>
            Create New Employee
        </h2>
    </div>

    @using (Html.BeginForm("Save", "Employee", FormMethod.Post, new { id = "employeeForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Eid) 

        <div class="form-section">

            @Html.ValidationSummary(true, "", new { @class = "validation-summary" })

            <div class="d-flex">
                <div class="form-group left-side">
                    @Html.LabelFor(m => m.Ename, "Employee Name *")
                    @Html.TextBoxFor(m => m.Ename, new
               {
                   @class = "form-control",
                   placeholder = "Enter employee full name",
                   required = "required"
               })
                </div>

                <div class="form-group right-side">
                    @Html.LabelFor(m => m.Etype, "Employee Type *")
                    @Html.TextBoxFor(m => m.Etype, new
               {
                   @class = "form-control",
                   placeholder = "Full-Time / Part-Time",
                   required = "required"
               })
                </div>
            </div>

            <div class="d-flex">
                <div class="form-group left-side">
                    @Html.LabelFor(m => m.Eaddr, "Enter Address *")
                    @Html.TextBoxFor(m => m.Eaddr, new
               {
                   @class = "form-control",
                   placeholder = "Enter address",
                   required = "required"
               })
                </div>

                <div class="form-group right-side">
                    @Html.LabelFor(m => m.Emob, "Mobile Number *")
                    @Html.TextBoxFor(m => m.Emob, new
               {
                   @class = "form-control",
                   placeholder = "10-digit mobile number",
                   type = "tel",
                   required = "required"
               })
                </div>
            </div>

            <div class="d-flex">
                <div class="form-group left-side">
                    @Html.LabelFor(m => m.Edesign, "Designation *")
                    @Html.TextBoxFor(m => m.Edesign, new
               {
                   @class = "form-control",
                   placeholder = "Job designation",
                   required = "required"
               })
                </div>

                <div class="form-group right-side">
                    <div class="checkbox-wrapper">
                        @Html.CheckBoxFor(m => m.IsActive)
                        @Html.LabelFor(m => m.IsActive, "Active Status")
                    </div>
                </div>
            </div>

        </div>

        <div class="button-group">
            <button type="submit" class="btn-save">
                <i class="fas fa-save"></i> Save
            </button>
            <button type="button" class="btn-cancel" onclick="window.close()">
                <i class="fas fa-times"></i> Cancel
            </button>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#employeeForm').on('submit', function (e) {
                e.preventDefault();
                $.ajax({
                    url: this.action,
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res && res.success === true) {
                            if (window.opener && !window.opener.closed) {
                                window.opener.location.reload();
                            }
                            window.close();
                        } else {
                        }
                    },
                    error: function () {
                    }
                });
            });

        });
    </script>
}
