@model IEnumerable<Employee_Management.Models.Employee>

@{
    ViewBag.Title = "Edit Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f4f6f9;
    }

    .page-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        padding: 30px;
        border-radius: 16px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
    }

        .page-header h2 {
            margin: 0;
            font-weight: 700;
        }

        .page-header p {
            margin: 5px 0 0 0;
            opacity: 0.9;
        }

    .card {
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        background: white;
    }

    .card-header {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        font-weight: 600;
        border-radius: 16px 16px 0 0;
        padding: 20px;
        font-size: 18px;
    }

    .table-responsive {
        padding: 20px;
    }

    table thead {
        background-color: #1f2937;
        color: white;
    }

    table tbody tr:hover {
        background-color: #fef3c7;
    }

    .btn-edit-icon {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        border: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

        .btn-edit-icon:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            transform: scale(1.15) rotate(-10deg);
            box-shadow: 0 5px 15px rgba(245, 158, 11, 0.5);
            color: white;
        }

    .btn-back {
        background: linear-gradient(135deg, #6b7280, #4b5563);
        color: white;
        border-radius: 30px;
        padding: 12px 30px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
    }

    .employee-badge {
        background: #fef3c7;
        color: #92400e;
        padding: 5px 12px;
        border-radius: 20px;
        font-weight: 600;
    }
</style>

<div class="container">
    <div class="page-header">
        <div class="header-title-section" style="cursor:pointer;"
             onclick="location.href='@Url.Action("Index","Home")'">
            <h2>Edit Employees</h2>
            <p>Select an employee to edit from the list below</p>
        </div>
    </div>

    <a href="@Url.Action("Index")" class="btn btn-back">
        <i class="fa fa-arrow-left"></i> Back to Employee List
    </a>

    <div class="card">
        <div class="card-header">
            <i class="fa fa-users"></i> Employee List - Select to Edit
        </div>
        <div class="table-responsive">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Address</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td><span class="employee-badge">ID: @emp.EId</span></td>
                                <td>
                                    @if (emp.EmpAddress != null)
                                    {
                                        <div>
                                            <i class="fa fa-map-marker text-primary"></i>
                                            <strong>@emp.EmpAddress.City</strong>, @emp.EmpAddress.State
                                            <br />
                                            <small class="text-muted">Pincode: @emp.EmpAddress.Pincode</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No address</span>
                                    }
                                </td>
                                <td>
                                    @if (emp.EmpRole != null)
                                    {
                                        <div>
                                            <i class="fa fa-briefcase text-success"></i>
                                            <strong>@emp.EmpRole.Role</strong>
                                            <br />
                                            <small class="text-muted">
                                                @emp.EmpRole.FromDate.ToString("dd-MMM-yyyy") to @emp.EmpRole.ToDate.ToString("dd-MMM-yyyy")
                                            </small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No role</span>
                                    }
                                </td>
                                <td>@emp.CreatedAt.ToString("dd-MMM-yyyy")</td>
                                <td class="text-center">
                                    <a href="@Url.Action("EditForm", new { id = emp.EId })"
                                       class="btn-edit-icon"
                                       title="Edit Employee ID: @emp.EId">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div style="text-align: center; padding: 40px; color: #6b7280;">
                    <i class="fa fa-users" style="font-size: 48px; opacity: 0.3;"></i>
                    <h4>No Employees Found</h4>
                    <p>There are no employees in the system.</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Add New Employee
                    </a>
                </div>
            }
        </div>
    </div>
</div>
    