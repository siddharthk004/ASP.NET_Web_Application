@{
    ViewBag.Title = "Registration";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-5">
                <div class="card shadow">
                    <div class="card-header text-center">
                        <h4>Registration</h4>
                    </div>

                    <div class="card-body">

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Error
                            </div>
                        }

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="d-flex">
                                <!-- NAME -->
                                <div class="form-group">
                                    <label>Name</label>
                                    @Html.TextBox("Name", null,
                                        new { @class = "form-control", placeholder = "Enter full name" })
                                </div>

                                <!-- MOBILE -->
                                <div class="form-group ">
                                    <label>Mobile</label>
                                    @Html.TextBox("Mobile", null,
                                        new { @class = "form-control", placeholder = "Enter mobile number" })
                                </div>
                            </div>
                            <div class="d-flex">
                                <!-- EMAIL -->
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBox("Email", null,
                                        new { @class = "form-control", placeholder = "Enter email address" })
                                </div>

                                <!-- ROLE -->
                                <div class="form-group">
                                    <label>Role</label>
                                    @Html.DropDownList(
                                        "Role",
                                        new SelectList(new[] { "Admin", "User" }),
                                        "-- Select Role --",
                                        new { @class = "form-control" }
                                    )
                                </div>
                            </div>
                            <div class="d-flex">
                                <!-- PASSWORD -->
                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.Password("Password", null,
                                        new { @class = "form-control", placeholder = "Enter password" })
                                </div>

                                <!-- CONFIRM PASSWORD -->
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    @Html.Password("ConfirmPassword", null,
                                        new { @class = "form-control", placeholder = "Confirm password" })
                                </div>
                            </div>
                            <!-- TERMS -->
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input">
                                <label class="form-check-label">
                                    I agree to the Terms & Conditions
                                </label>
                            </div>

                            <!-- SUBMIT -->
                            <button type="submit" class="btn btn-primary btn-block login_btn">
                                Register
                            </button>
                        }

                        <div class="text-center mt-3">
                            <span>Already have an account?</span><br />
                            <a href="@Url.Action("Index", "Login")" class="btn-l btn-link">
                                Login here
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

<style>
    .login_btn {
        margin-top: 15px;
    }
    .form-group {
        padding-left: 5%;
        padding-top: 3%;
    }
    .form-check {
        padding-left: 25%;
    }
    .btn {
        margin-left: 40%;
    }
    .container {
        margin-top: 7%;
    }

    .card {
        border: 0.3vh solid antiquewhite;
    }
    
    .card-header {
        background-color: cadetblue;
        color: white;
    }
</style>
