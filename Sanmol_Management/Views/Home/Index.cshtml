@{
    ViewBag.Title = "Dashboard - Sanmol Management";
}

<main>
    <!-- Dashboard Header -->
    <section class="row banner mb-4">
        <div class="col-md-12">
            <div class="banner-content">
                <div class="banner-icon-wrapper">
                    <i class="fas fa-building banner-icon"></i>
                    <div class="icon-pulse"></div>
                </div>
                <div class="banner-text">
                    <h1 class="sanmol-name" id="title">Sanmol Management Dashboard</h1>
                    <p class="lead banner-subtitle">Welcome to your comprehensive employee and company management system.</p>
                </div>
            </div>
            <div class="banner-decoration">
                <div class="decoration-circle decoration-circle-1"></div>
                <div class="decoration-circle decoration-circle-2"></div>
                <div class="decoration-circle decoration-circle-3"></div>
            </div>
        </div>
    </section>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Total Employees</h6>
                            <h2 class="display-4 mb-0">@ViewBag.TotalEmployees</h2>
                        </div>
                        <div>
                            <i class="fas fa-users fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-primary border-top border-light">
                    <a href="@Url.Action("Index", "Employee")" class="text-white text-decoration-none">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Total Companies</h6>
                            <h2 class="display-4 mb-0">@ViewBag.TotalCompanies</h2>
                        </div>
                        <div>
                            <i class="fas fa-building fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-success border-top border-light">
                    <a href="@Url.Action("Index", "Company")" class="text-white text-decoration-none">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Total Work Days</h6>
                            <h2 class="display-4 mb-0">@ViewBag.TotalWorkDays</h2>
                        </div>
                        <div>
                            <i class="fas fa-calendar-alt fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-warning border-top border-light">
                    <span class="text-white">Across all companies</span>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Employee Count</h6>
                            <h2 class="display-4 mb-0">@ViewBag.TotalEmployeeCount</h2>
                        </div>
                        <div>
                            <i class="fas fa-user-tie fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-info border-top border-light">
                    <span class="text-white">In all companies</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions and Recent Activity -->
    <div class="row">
        <!-- Quick Actions -->
        <section class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h4>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Create", "Employee")" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus text-primary"></i> Add New Employee
                        </a>
                        <a href="@Url.Action("Create", "Company")" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle text-success"></i> Add New Company
                        </a>
                        <a href="@Url.Action("Index", "Employee")" class="list-group-item list-group-item-action">
                            <i class="fas fa-list text-info"></i> View All Employees
                        </a>
                        <a href="@Url.Action("Index", "Company")" class="list-group-item list-group-item-action">
                            <i class="fas fa-building text-warning"></i> View All Companies
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Recent Employees -->
        <section class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-clock"></i> Recent Employees</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentEmployees != null && ViewBag.RecentEmployees.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var employee in ViewBag.RecentEmployees)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@employee.Ename</h6>
                                        <small class="badge bg-secondary">@employee.Etype</small>
                                    </div>
                                    <p class="mb-1"><small><i class="fas fa-briefcase"></i> @employee.Edesign</small></p>
                                    <small class="text-muted"><i class="fas fa-phone"></i> @employee.Emob</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No employees found. <a href="@Url.Action("Create", "Employee")">Add one now</a></p>
                    }
                </div>
            </div>
        </section>
    </div>

    <!-- System Information -->
    <div class="row footer">
        <section class="col-md-12">
            <div class="card border-info">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-info-circle text-info"></i> About Sanmol Management</h5>
                    <p class="card-text">
                        Sanmol Management is your comprehensive solution for managing employees and company information.
                        Track employee details, monitor company work days, and maintain accurate records all in one place.
                    </p>
                    <div class="row text-center mt-3">
                        <div class="col-md-4">
                            <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                            <p><strong>Secure</strong><br />Your data is protected</p>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-tachometer-alt fa-2x text-primary mb-2"></i>
                            <p><strong>Fast</strong><br />Quick access to information</p>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-mobile-alt fa-2x text-info mb-2"></i>
                            <p><strong>Responsive</strong><br />Works on all devices</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- AI Chatbot Widget -->
    <div id="chatbot-widget">
        <div id="chat-button" onclick="toggleChat()">
            <i class="fas fa-comments"></i>
            <span class="chat-badge">AI</span>
        </div>
        
        <div id="chat-window" style="display: none;">
            <div class="chat-header">
                <div class="chat-header-content">
                    <i class="fas fa-robot"></i>
                    <div>
                        <h6 class="mb-0">Sanmol AI Assistant</h6>
                        <small class="text-white-50">Ask me anything about your data</small>
                    </div>
                </div>
                <button class="chat-close-btn" onclick="toggleChat()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="chat-body" id="chat-messages">
                <div class="chat-message bot-message">
                    <div class="message-avatar">
                        <i class="fas fa-robot"></i>
                    </div>
                    <div class="message-content">
                        <p>Hello! 👋 I'm your Sanmol AI assistant. I can help you with:</p>
                        <ul class="mb-0">
                            <li>Employee & Company statistics</li>
                            <li>Searching records</li>
                            <li>Data insights</li>
                        </ul>
                        <p class="mb-0 mt-2"><small>Type <strong>'help'</strong> to see all commands</small></p>
                    </div>
                </div>
            </div>
            
            <div class="chat-footer">
                <div class="chat-input-group">
                    <input type="text" id="chat-input" class="chat-input" placeholder="Type your message..." onkeypress="handleChatKeyPress(event)">
                    <button class="chat-send-btn" onclick="sendMessage()">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
                <div class="chat-suggestions">
                    <button class="suggestion-btn" onclick="sendQuickMessage('How many employees?')">
                        <i class="fas fa-users"></i> Employee Count
                    </button>
                    <button class="suggestion-btn" onclick="sendQuickMessage('Show statistics')">
                        <i class="fas fa-chart-bar"></i> Statistics
                    </button>
                    <button class="suggestion-btn" onclick="sendQuickMessage('List companies')">
                        <i class="fas fa-building"></i> Companies
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    function toggleChat() {
        const chatWindow = document.getElementById('chat-window');
        const chatButton = document.getElementById('chat-button');
        
        if (chatWindow.style.display === 'none') {
            chatWindow.style.display = 'flex';
            chatButton.style.display = 'none';
        } else {
            chatWindow.style.display = 'none';
            chatButton.style.display = 'flex';
        }
    }

    function handleChatKeyPress(event) {
        if (event.key === 'Enter') {
            sendMessage();
        }
    }

    function sendQuickMessage(message) {
        document.getElementById('chat-input').value = message;
        sendMessage();
    }

    function sendMessage() {
        const input = document.getElementById('chat-input');
        const message = input.value.trim();
        
        if (message === '') return;
        
        // Add user message to chat
        addMessage(message, 'user');
        input.value = '';
        
        // Show typing indicator
        showTypingIndicator();
        
        // Send to server using jQuery AJAX (ASP.NET MVC compatible)
        $.ajax({
            url: '@Url.Action("ChatBot", "Home")',
            type: 'POST',
            data: { message: message },
            success: function(data) {
                removeTypingIndicator();
                if (data.success) {
                    addMessage(data.response, 'bot');
                } else {
                    addMessage('Sorry, I encountered an error. Please try again.', 'bot');
                }
            },
            error: function(xhr, status, error) {
                removeTypingIndicator();
                addMessage('Sorry, something went wrong. Please try again.', 'bot');
                console.error('Error:', error);
            }
        });
    }

    function addMessage(text, sender) {
        const chatMessages = document.getElementById('chat-messages');
        const messageDiv = document.createElement('div');
        messageDiv.className = `chat-message ${sender}-message`;
        
        if (sender === 'bot') {
            messageDiv.innerHTML = `
                <div class="message-avatar">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <p class="mb-0">${text}</p>
                </div>
            `;
        } else {
            messageDiv.innerHTML = `
                <div class="message-content">
                    <p class="mb-0">${text}</p>
                </div>
                <div class="message-avatar">
                    <i class="fas fa-user"></i>
                </div>
            `;
        }
        
        chatMessages.appendChild(messageDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function showTypingIndicator() {
        const chatMessages = document.getElementById('chat-messages');
        const typingDiv = document.createElement('div');
        typingDiv.className = 'chat-message bot-message typing-indicator';
        typingDiv.id = 'typing-indicator';
        typingDiv.innerHTML = `
            <div class="message-avatar">
                <i class="fas fa-robot"></i>
            </div>
            <div class="message-content">
                <div class="typing-dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        `;
        chatMessages.appendChild(typingDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function removeTypingIndicator() {
        const typingIndicator = document.getElementById('typing-indicator');
        if (typingIndicator) {
            typingIndicator.remove();
        }
    }
</script>

